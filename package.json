{
  "name": "triptrackr",
  "version": "1.0.0",
  "description": "Intelligent travel planning system with weather integration and AI assistance",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon --config nodemon.json server/index.js",
    "client": "cd client && npm start",
    "build": "npm ci --prefix client || npm install --prefix client && CI=false npm run build --prefix client",
    "postinstall": "npm install --prefix client",
    "install-all": "npm install && cd client && npm install",
    "start": "node server/index.js"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": ["travel", "planning", "weather", "ai", "maps"],
  "author": "TripTrackr Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.6.0",
    "openai": "^4.52.0",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.14.0",
    "ical-generator": "^5.0.0",
    "node-cron": "^3.0.3",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "mongoose": "^8.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}
